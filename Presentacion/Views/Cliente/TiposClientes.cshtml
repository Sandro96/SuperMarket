
@{
    ViewBag.Title = "Tipos de clientes";
}
@{
    Presentacion.Models.UsuarioModel unUsuario = (Presentacion.Models.UsuarioModel)Session["Usuario"];
}
<!--Iconos de Google-->
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<h1>Seleccione una opción.</h1>
<hr />
@if (unUsuario != null && unUsuario.Administrador)
{
    <div class="row">
        <div class="col-md-4">
            <h2>Crear cliente</h2>
            <p><a class="btn btn-default" href="http://localhost:59351/Cliente/CrearCliente"><i class="material-icons" style="color:black; font-size:500%;">face</i>;<i class="material-icons" style="color:white; font-size:500%;">add</i></a></p>
        </div>
        <div class="col-md-4">
            <h2>Lista de clientes</h2>
            <p><a class="btn btn-default" href="http://localhost:59351/Cliente/ListaCliente"><i class="material-icons" style="color:black; font-size:500%;">face</i>;<i class="material-icons" style="color:white; font-size:500%;">assignment</i></a></p>
        </div>
        <div class="col-md-4">
            <h2>Lista de deshabilitados</h2>
            <p><a class="btn btn-default" href="http://localhost:59351/Cliente/ClientesDeshabilitados"><i class="material-icons" style="color:black; font-size:500%;">face</i>;<i class="material-icons" style="color:white; font-size:500%;">do_not_disturb</i></a></p>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <h2>Crear cliente</h2>
            <p><a class="btn btn-default" href="http://localhost:59351/Cliente/CrearCliente"><i class="material-icons" style="color:black; font-size:500%;">face</i>;<i class="material-icons" style="color:white; font-size:500%;">add</i></a></p>
